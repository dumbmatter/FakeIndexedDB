{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./build",
        "target": "es5",
        "lib": ["dom", "es6"],
        "module": "commonjs",
        "allowJs": true,
        "downlevelIteration": true,
        "noEmitOnError": true,
        "strict": true,
        "declaration": true
    },
    "exclude": [
        "node_modules",
        "build",
        "lib",
        "src/test/web-platform-tests",
        "auto.js"
    ]
}
